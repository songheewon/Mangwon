<div class="c-post-card js-post-card__wrap{{#if format}} c-post-card--{{format}}{{/if}}">

  <div class="c-post-card__media">
    <a href="{{ url }}" class="c-post-card__url--cover"></a>
    {{#if feature_image}}
    <div class="c-post-card__image--wrap">
      <img
        class="c-post-card__image"
        alt="{{#if feature_image_alt}}{{ feature_image_alt }}{{ else }}{{ title }}{{/if}}"
        src="{{img_url feature_image}}"
      />
    </div>
    {{/if}}
  </div>

  <div class="c-post-card__main">

    <div class="c-post-card__membership t-v__only--desktop">
      <div class="c-post-card__membership--label c-post-card__membership--{{visibility}}">
        {{#match visibility "paid"}}Premium{{else match visibility "members"}}Members{{else}}Free{{/match}}
      </div>
    </div>

    <div class="c-post-card__content">
      <h2 class="c-post-card__title">
        <a href="{{ url }}" class="c-post-card__url">{{title}}</a>
      </h2>
      <p class="c-post-card__excerpt">{{#if custom_excerpt}}{{custom_excerpt}}{{else}}{{excerpt}}{{/if}}</p>
    </div>

    <div class="c-post-card__data">
      {{#primary_author}}
      <div class="c-post-card__author">

        <div class="c-post-card__author--profile t-v__only--desktop">
        {{#if profile_image}}
          <div class="c-post-card__author--profile-image">
            <img src="{{img_url profile_image}}" alt="{{name}}의 프로필 사진">
          </div>
        {{/if}}
        </div>
        <div class="c-post-card__author--name">
          <a class="c-post-card__author--link" href="{{url}}">{{name}}</a>
        </div>
      </div>
      {{/primary_author}}

      <div class="c-post-card__meta">

        <div class="c-post-card__tag t-v__only--desktop">
          {{#primary_tag}}
          <div class="c-post-card__tag--name">
            <a class="c-post-card__tag--link" href="{{url}}">{{name}}</a>
          </div>
          {{/primary_tag}}
        </div>

        <div class="c-post-card__date">
          <time class="c-post-card__datetime t-v__only--desktop" datetime="{{ date format="YYYY-MM-DD" }}" title="{{ date format="YYYY년 M월 D일" }}">{{ date format="YYYY년 M월 D일" }}</time>
          <time class="c-post-card__datetime t-v__only--mobile" datetime="{{ date format="YYYY-MM-DD" }}" title="{{ date format="YYYY.MM.DD" }}">{{ date format="YYYY.MM.DD" }}</time>
        </div>
      </div>
    </div>

  </div>

</div>